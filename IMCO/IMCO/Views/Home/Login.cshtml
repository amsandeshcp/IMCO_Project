
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<h3>Please Login Here.</h3>
<div class="row">
    @using (Html.BeginForm("Login", "Home", null, FormMethod.Post, new { id = "myform", name = "myform" }))
    {
        @Html.ValidationSummary(true)
        <div class="col-md-12">

            <div class="form-group">
                <input class="form-control" autocomplete="off" type="text" required="" placeholder="Username" name="UserName" id="UserName" value='@ViewBag.UserName'>
                <input type="hidden" name="OffsetTime" id="OffsetTime" />
            </div>
            <div class="form-group">
                <input class="form-control" type="password" autocomplete="off" required="" placeholder="Password" id="Password" name="Password" value='@ViewBag.Password'>
            </div>
            <div class="form-group">
                <button id="show" class="btn btn-login" type="submit" style="font-family:Poppins;">LOG IN</button>
            </div>

        </div>

        <br />
        <div class="row">
            @if (ViewBag.status == false)
            {
                <div style="border: 2px solid red;margin-top: 10%">
                    <div style="font-size:14px;color:red;margin-left:15px;margin-right:15px">@ViewBag.status </div>
                </div>
            }
            else

            {
                <div style="border: 2px solid green;margin-top: 10%">
                    <div style="font-size:14px;color:green;margin-left:15px;margin-right:15px">@ViewBag.status </div>
                </div>
            }
        </div>
    }

</div>

